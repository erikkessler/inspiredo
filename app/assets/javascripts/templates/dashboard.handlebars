{{#view App.FlashView id="flash-view"}}
  <div id="message">
    {{view.content.message}}
  </div>
{{/view}}

<div class="header">
  <div class="header-content">
    <div class="header-logo">
      <a href="/">
	<img alt="Logo" src="/assets/logo.png" />
      </a>
    </div>
    
    <div class="header-actions">
      {{#link-to 'dashboard.profile'}}{{controllers.sign_in.email}}{{/link-to}} | <a href="/sign_out">Sign Out</a>
    </div>
  </div>
</div>

<div class="content">
  <div class="content-content">
    <div class="dashboard-container">
      <div class="students-pane">
	<strong>Students</strong>
	<ul class="student-list">
	  {{#each model}}
	  {{#link-to 'dashboard.student' this}}<li>{{email}}</li>{{/link-to}}
	  {{/each}}
	  {{add-item addType='student' link='dashboard.add_student'}}
	</ul>
      </div>


      <div class="student-pane">
	{{outlet}}
      </div>
    </div>

  </div>
</div>

<div class="footer">

  <span class="contact">
    <small>Contact us at <a href="mailto:erik@inspiredo.com">erik@inspiredo.com</a></small>
  </span>
</div>